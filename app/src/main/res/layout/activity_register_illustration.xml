<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


 <ImageView
     android:id="@+id/iv_registerForOrdinary_ill"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:src="@drawable/bg_register_ordinary"
     android:layout_marginBottom="20dp"
     android:layout_alignParentBottom="true"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
    />
    <ImageView
        android:id="@+id/iv_registerForCompany_ill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_register_company"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/iv_registerForOrdinary_ill"
        />
    <ImageView
        android:id="@+id/iv_registerForTrainee_ill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_register_trainee"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/iv_registerForCompany_ill"
        />
    <TextView
        android:id="@+id/tv_noticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="端午放假通知"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#f00"
        android:layout_below="@id/tv_noticeTitle"
        android:layout_above="@id/iv_registerForTrainee_ill"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />

</RelativeLayout>
