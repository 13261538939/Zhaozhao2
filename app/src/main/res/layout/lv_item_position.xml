<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_shape"
    android:paddingBottom="4dp"
    >

    <com.szl.zhaozhao2.view.RoundImageView
        android:id="@+id/iv_applyeeAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/icon_avatar"
        />
    <TextView
        android:id="@+id/tv_applyeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刘德华"
        android:layout_toRightOf="@id/iv_applyeeAvatar"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_checkResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看简历"
        android:textSize="12sp"
        android:layout_toRightOf="@id/tv_applyeeName"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/icon_address"
        android:layout_marginTop="5dp"
        android:drawablePadding="3dp"
        />
    <TextView
        android:id="@+id/tv_applyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-5-12"
        android:layout_below="@id/tv_applyeeName"
        android:layout_alignLeft="@id/tv_applyeeName"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_deleteResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:drawableLeft="@drawable/icon_delete"
        android:drawablePadding="3dp"
        android:layout_below="@id/tv_applyeeName"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_collectResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:drawableLeft="@drawable/icon_collect"
        android:drawablePadding="3dp"
        android:layout_below="@id/tv_applyeeName"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/tv_deleteResume"
        android:layout_marginRight="21dp"
        android:textSize="12sp"
        />
</RelativeLayout>
