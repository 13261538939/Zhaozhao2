<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <com.szl.zhaozhao2.view.TitlebarView
        android:id="@+id/titlebar_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_titlebar"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="4dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tv_fullTime"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_fulltime"
        android:text="全职"
        android:gravity="center_horizontal"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_partTime"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_parttime"
        android:text="兼职"
        android:gravity="center_horizontal"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_trainee"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_practice"
        android:text="实习"
        android:gravity="center_horizontal"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_project"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_project"
        android:text="项目"
        android:gravity="center_horizontal"
        android:drawablePadding="4dp"
        android:textSize="14sp"
        />

</LinearLayout>
    <com.szl.zhaozhao2.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/ptr_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/refreshListView"
        android:divider="@color/transparent"
        />



</LinearLayout>
