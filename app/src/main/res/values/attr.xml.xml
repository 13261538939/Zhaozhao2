<?xml version="1.0" encoding="utf-8"?>
<resources>

     <!--Round ImageView -->

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius"/>
        <attr name="type"/>
    </declare-styleable>
    <attr name="borderRadius" format="dimension"/>
    <attr name="type">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>
   <declare-styleable name="CustomLinearLayoutView">
       <attr name="lable" format="string"/>
   </declare-styleable>

    <declare-styleable name="PullDownView">
        <attr name="needAD" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PullToRefresh">

        <!-- A drawable to use as the background of the Header and Footer Loading Views -->
        <attr name="ptrHeaderIsHiddenDate" format="boolean" />

        <!-- A drawable to use as the background of the Header and Footer Loading Views -->
        <attr name="ptrHeaderBackground" format="reference|color" />

        <!-- Mode of Pull-to-Refresh that should be used -->
        <attr name="ptrMode">
            <flag name="disabled" value="0x0" />
            <flag name="pullFromStart" value="0x1" />
            <flag name="pullFromEnd" value="0x2" />
            <flag name="both" value="0x3" />
            <flag name="manualOnly" value="0x4" />

            <!-- These last two are depreacted -->
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
        </attr>
        <!-- BELOW HERE ARE DEPRECEATED. DO NOT USE. -->
        <attr name="ptrAdapterViewBackground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="LoadingProgressBar">
        <attr name="loading_progress" format="reference" />
        <attr name="image_loading" format="reference" />
    </declare-styleable>

</resources>
